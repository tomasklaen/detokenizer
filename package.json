{
	"name": "detokenizer",
	"version": "1.0.2",
	"description": "Replace tokens in a string.",
	"author": "tomasklaen",
	"repository": "https://github.com/tomasklaen/detokenizer",
	"license": "MIT",
	"keywords": [
		"string",
		"replace",
		"token"
	],
	"files": [
		"dist"
	],
	"main": "./dist/main.js",
	"types": "./dist/main.d.ts",
	"scripts": {
		"format": "prettier --write \"src/**/*.ts\"",
		"test:formatting": "prettier --check \"src/**/*.ts\"",
		"test": "npm-run-all test:formatting jest",
		"test:watch": "jest --watchAll",
		"clean": "rm -rf dist",
		"build": "tsc -p tsconfig.build.json",
		"start": "npm-run-all clean test:watch",
		"preversion": "npm-run-all clean build",
		"git-push": "git push",
		"npm-publish": "npm publish",
		"postversion": "npm-run-all git-push npm-publish"
	},
	"devDependencies": {
		"@types/jest": "^26.0.21",
		"@types/node": "^15.0.1",
		"jest": "^26.6.3",
		"npm-run-all": "^4.1.5",
		"prettier": "^2.2.1",
		"rimraf": "^3.0.2",
		"ts-jest": "^26.5.4",
		"typescript": "^4.2.3"
	}
}
